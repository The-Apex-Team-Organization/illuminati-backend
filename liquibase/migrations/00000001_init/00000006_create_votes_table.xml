<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <changeSet id="00000006_create_votes_table" author="Taras Andreiko">
        <createTable tableName="votes">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_votes_id"/>
            </column>

            <column name="name" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>

            <column name="amount_of_agreed" type="BIGINT" defaultValueNumeric = "0">
                <constraints nullable="false"/>
            </column>

            <column name="amount_of_disagreed" type="BIGINT" defaultValueNumeric = "0">
                <constraints nullable="false"/>
            </column>

            <column name="user_in_question_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="vote_type" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="votes"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
